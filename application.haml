      .span12
        %h1 lorem ipsum dolor sit amet
        %h2 lorem ipsum dolor sit amet
        #buttons
          %a#demo-button.btn.btn-primary
            %span Voir notre demo
          %a#contact-button.btn.btn-primary
            %span Nous contacter
    #about.row-fluid
      .span12
        .row-fluid
